// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see:
[
    {
        "label": "Debug Assembler",
        "adapter": "CodeLLDB",
        "request": "launch",
        "build": {
            "command": "cargo",
            "args": ["build", "--bin", "asm"]
        },
        "program": "${ZED_WORKTREE_ROOT}/target/debug/asm",
        "args": ["./prog/add_asm"],
        "sourceLanguages": ["rust"]
    },
    {
        "label": "Debug VM",
        "adapter": "CodeLLDB",
        "request": "launch",
        "build": {
            "command": "cargo",
            "args": ["build", "--bin", "vm"]
        },
        "program": "${ZED_WORKTREE_ROOT}/target/debug/vm",
        "args": ["./prog/prog.bin.hex"],
        "sourceLanguages": ["rust"]
    }
]
